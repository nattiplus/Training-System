                            <div class="table-responsive">
                                <table class="table table-striped table-bordered table-hover" id="dataTables-trainingsystem">
                                    <thead>
                                        <tr>
                                            <th>Id</th>
                                            <th>Name</th>
                                            <th>Image</th>
                                            <th>CreateDate</th>
                                            <th>UpdateDate</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
