                                        @if (ViewBag.Categories != null)
                                        {
                                            foreach (var item in ViewBag.Categories)
                                            {
                                                <tr id="row_@item.Id">
                                                    <td>@item.Id</td>
                                                    <td>@item.Name</td>
                                                    <td><img src="@Url.Content(item.Image)" width="400" height="300" /></td>
                                                    <td>@item.Create_Date</td>
                                                    <td>@item.Update_Date</td>
