@model Training_System.Models.Trainee

@{
    ViewBag.Title = "Trainee Profile";
}

<div class="container img-rounded" style="padding-bottom: 50px;">
    <div class="row" style="margin-top: 50px;">
        <div class="col-md-4">
            <div class="panel panel-default">
                <div class="text-center">
                    <img style="width: 150px;" src="https://st3.depositphotos.com/15648834/17930/v/600/depositphotos_179308454-stock-illustration-unknown-person-silhouette-glasses-profile.jpg">
                </div>
                <div class="text-center">
                    <button class="btn btn-default" type="submit" disabled="disabled">Trainee</button> <br />
                    <h4>@Html.DisplayFor(model => model.FullName)</h4>
                    <span>@Html.DisplayFor(model => model.AspNetUser.Email)</span>
                </div>
            </div>
        </div>
        <div class="col-md-8">
            <div class="panel panel-default text-center">
                <h3 class="page-header"><strong>Profile Settings</strong></h3>
                <form class="form-horizontal" action="/Trainee/TraineeProfile/@Model.Id" method="post">
                    @Html.AntiForgeryToken();

                    @Html.HiddenFor(model => model.AspNetUserId)

                    <div class="form-group">
                        <label for="inputFullName" class="col-sm-2 control-label">Full Name</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="inputFullName" name="FullName" placeholder="Full Name" value="@Model.FullName">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="inputAge" class="col-sm-2 control-label">Age</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="inputAge" name="Age" placeholder="Age" value="@Model.Age">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="inputDOB" class="col-sm-2 control-label">Date Of Birth</label>
                        <div class="col-sm-10">
                            <input type="date" class="form-control" id="inputDOB" name="DoB" placeholder="Date Of Birth" value="@Model.DoB">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="inputAdminEmail" class="col-sm-2 control-label">Email</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="inputAdminEmail" name="Email" placeholder="Email" value="@Model.Email">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="inputEducation" class="col-sm-2 control-label">Education</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="inputEducation" name="Education" placeholder="Education" value="@Model.Education">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="inputAdminTelephone" class="col-sm-2 control-label">Telephone</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="inputAdminTelephone" name="Telephone" placeholder="Telephone" value="@Model.Telephone">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="inputAdminLocation" class="col-sm-2 control-label">Location</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="inputAdminLocation" name="Location" placeholder="Location" value="@Model.Location">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="inputAdminDepartment" class="col-sm-2 control-label">Department</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="inputAdminDepartment" name="Department" placeholder="Department" value="@Model.Department">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="inputProgrammingLanguage" class="col-sm-2 control-label">Programming Language</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="inputProgrammingLanguage" name="ProgrammingLanguage" placeholder="Programming Language" value="@Model.ProgrammingLanguage">
                        </div>
                    </div>

                    @*<div class="form-group">
                        <label for="inputTOEICscore" class="col-sm-2 control-label">TOEIC Score</label>
                        <div class="col-sm-10">
                            <input type="number" class="form-control" id="inputTOEICscore name="TOEICscore" placeholder="TOEIC Score" value="@Model.TOEICscore">
                        </div>
                    </div>*@

                    <div class="form-group">
                        @Html.LabelFor(model => model.TOEICscore, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.TOEICscore, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.TOEICscore, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="inputExperience" class="col-sm-2 control-label">Experience Details</label>
                        <div class="col-sm-10">
                            <textarea cols="2" rows="3" class="form-control" id="inputExperience" name="ExperienceDetails" placeholder="Experience Details">@Model.ExperienceDetails</textarea>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-12">
                            <button type="submit" class="btn btn-success">Save Changes</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>